extends ../layouts/common.pug
block content
    h1 
        span.mr-3 Users
        a.btn.btn-success(href="/users/create") Add new
    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="POST", class="d-flex")
            input(type="text", name="q", class="form-control", placeholder="Search...")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Index
            th Name
            th Phone
            th Action
        each user, index in users
            tr
                td=index+1
                td= user.name
                td= user.phone
                td
                    a.btn.btn-secondary(href="/users/"+user.id) Detail
                    span &nbsp;
                    a.btn.btn-warning(href="/users/update/"+user.id) Edit
                    span &nbsp;
                    a.btn.btn-danger(href="") Delete