extends ../layouts/common.pug

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name", type="text", placeholder="Name...", value=values ? values.name : '')
        
        .form-group
            label(for="age") Age
            input#age.form-control(name="age", type="text", placeholder="Age...", value=values ? values.age : '')
        
        .form-group
            label(for="phone") Phone
            input#phone.form-control(name="phone", type="text", placeholder="Phone number...", value=values ? values.phone : '')
        
        .form-group
            label(for="address") Address
            input#address.form-control(name="address", type="text", placeholder="Address...")
        button.btn.btn-primary Save 
        span &nbsp;
        a.btn.btn-secondary(href="/users") Cancel