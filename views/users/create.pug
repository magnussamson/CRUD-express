extends ../layouts/common.pug

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name", type="text", placeholder="Name...", value=values ? values.name : '')
        
        .form-group
            label(for="email") Email
            input#email.form-control(name="email", type="email", placeholder="Email...", value=values ? values.email : '')
        
        .form-group
            label(for="phone") Phone
            input#phone.form-control(name="phone", type="text", placeholder="Phone number...", value=values ? values.phone : '')
        
        .form-group
            label(for="address") Address
            input#address.form-control(name="address", type="text", placeholder="Address...")
        
        .form-group
            label(for="password") Password
            input#password.form-control(name="password", type="text", placeholder="Password...")
        
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(name="avatar", type="file")
        button.btn.btn-primary Save 
        span &nbsp;
        a.btn.btn-secondary(href="/users") Cancel